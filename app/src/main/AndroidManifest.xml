<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="io.unisong.android" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/UnisongTheme" >
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <service android:name=".MediaService"/>

        <activity android:name=".activity.UnisongActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            >

        </activity>

        <activity
            android:name="io.unisong.android.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="io.unisong.android.activity.musicplayer.MusicPlayer"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="io.unisong.android.activity.LoginActivity"
            android:label="@string/login" >
        </activity>
        <activity
            android:name="io.unisong.android.activity.RegisterActivity"
            android:label="@string/register" >
        </activity>
        <activity
            android:name=".activity.musicselect.MusicSelectActivity"
            android:label="@string/add_song"
            android:screenOrientation="portrait" >
        </activity>


        <activity
            android:name="io.unisong.android.activity.friends.FriendsListActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <activity
            android:name="io.unisong.android.activity.musicplayer.MusicPlaying"
            android:label="@string/title_activity_music_playing" >
            <meta-data android:name="android.support.PARENT_ACTIVITY" android:value="io.unisong.android.activity.musicplayer.MusicPlayer" />
        </activity>


        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges=
                "keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:label="@string/app_name" />


        <activity android:name=".activity.FBPhoneNumberInputActivity"
            android:label="@string/app_name"
            >
        </activity>

        <activity android:name=".activity.AddFriendActivity"
            android:label="@string/add_friend_label"
            />

        <activity android:name=".activity.AddFriendByUsernameActivity"
            android:label="@string/add_friend_label"
            />
        <activity android:name=".activity.AddFriendFromContactsActivity"
            android:label="@string/add_friend_label"
            />
        <activity android:name=".activity.session.MainSessionActivity"
            android:label="@string/app_name"
            />

    </application>

</manifest>
