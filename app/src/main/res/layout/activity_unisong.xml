<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <include
        android:id="@+id/music_bar"
        layout="@layout/music_bar">
    </include>

    <RelativeLayout
    android:layout_width="match_parent" android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/user_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/user_image"
                android:layout_width="128dp"
                android:layout_height="128dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:onClick="onProfileClick"
                android:src="@drawable/ic_contact_picture"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/current_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_image"
                android:gravity="center_vertical"
                android:textColor="@color/primaryText"
                android:text="Placeholder Name"
                android:textSize="@dimen/current_user_name_text_size"
                android:singleLine="true" />

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/current_user_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/current_user_name"
                android:ellipsize="marquee"
                android:textColor="@color/secondaryText"
                android:textSize="@dimen/current_user_username_text_size"
                android:singleLine="true"
                android:text="\@username"  />

        </RelativeLayout>


        <View
            android:id="@+id/unisong_first_divider"
            android:layout_below="@id/user_profile"
            style="@style/Divider"/>


        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/unisong_first_divider"
            android:id="@+id/active_sessions_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/friends_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>



    </RelativeLayout>
</LinearLayout>