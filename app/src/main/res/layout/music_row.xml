<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/friend_row_height"
    android:onClick="onRowClick">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/music_image"
        android:layout_width="@dimen/music_image_radius"
        android:layout_height="@dimen/music_image_radius"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/music_image_margin"
        android:src="@drawable/default_artwork"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/music_text_left_margin"
        android:layout_marginStart="@dimen/music_text_left_margin"
        android:layout_marginRight="@dimen/friend_text_right_margin"
        android:layout_marginEnd="@dimen/friend_text_right_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/music_first_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/primaryText"
            android:text="Placeholder Name"
            android:textSize="@dimen/text_size_row_primary" />

        <TextView
            android:id="@+id/music_second_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/friend_first_line"
            android:singleLine="true"
            android:textColor="@color/secondaryText"
            android:text="\@username"
            android:textSize="@dimen/text_size_row_secondary" />
    </LinearLayout>


</RelativeLayout>